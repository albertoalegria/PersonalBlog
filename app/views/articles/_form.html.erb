<%= form_for(@article) do |f| %>
	<% @article.errors.full_messages.each do |message| %>
		<div class="header-background-color header-text-color top-space">
			* <%= message %>
		</div>
	<% end %>
	<div class="field">
		<%= f.text_field :title, placeholder: "Titulo", class: "form-control" %>
	</div>

	<div class="field">
		<%= f.text_area :body, placeholder: "Contenido del articulo", style: "height: 300px;", class: "form-control" %>
	</div>

	<div class="field">
		<%= f.submit "Editar Articulo", class:"btn large-padding"%>
	</div>
<% end %>